<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="chassis">

  <xacro:property name="mesh_path_chassis" value="file://$(find my_robot)/mesh/chassis.obj"/>

  <xacro:macro name="chassis" params="">
    <link name="base_link">
      <inertial>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <mass value="1.0"/>
        <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
      </inertial>

      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <!-- <mesh filename="package://my_robot/description/chassis.obj" scale="1.0 1.0 1.0"/> -->
          <!-- <mesh filename="file://$(find my_robot)/description/chassis.obj"/> -->
          <mesh filename="${mesh_path_chassis}"/>
        </geometry>
        <material name="white">
          <color rgba="1 1 1 1"/>
        </material>
      </visual>

      <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <!-- <mesh filename="package://my_robot/description/chassis.obj" scale="1.0 1.0 1.0"/> -->
          <!-- <mesh filename="file://$(find my_robot)/description/chassis.obj"/> -->
          <mesh filename="${mesh_path_chassis}"/>
        </geometry>
      </collision>
    </link>
  </xacro:macro>

