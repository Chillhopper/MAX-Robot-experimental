<?xml version="1.0" ?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="drive_wheel.urdf">

  <xacro:macro name="drive_wheel" params="wheel_name joint_name parent_link xyz_pos">

  <link name="${wheel_name}">
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0"/>
       <mass value="0.5"/>
       <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <!-- <mesh filename="package://my_robot/description/drive_wheel.obj" scale="1.0 1.0 1.0"/> -->
        <mesh filename="file://$(find my_robot)/description/drive_wheel.obj"/>
      </geometry>
      <material name="white">
       <color rgba="1 1 1 1"/>
     </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <!-- <mesh filename="package://my_robot/description/drive_wheel.obj" scale="1.0 1.0 1.0"/> -->
        <mesh filename="file://$(find my_robot)/description/drive_wheel.obj"/>
      </geometry>
    </collision>
  </link>

    <joint name="${joint_name}" type="continuous">
      <parent link="${parent_link}"/>
      <child link="${wheel_name}"/>
      <origin xyz="${xyz_pos}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>


  </xacro:macro>
</robot>
        